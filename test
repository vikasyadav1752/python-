for i in range(1, 8):
    for j in range(1, 5):
        if i == j or i == 1:
            print("*", end=" ")
        else:
            print(" ", end=" ")  # Adding spaces to maintain shape
    print()  # Move to the next line after inner loop finishes




n = 4  # Number of rows

for i in range(1, n + 1):
    for j in range(n - i):
        print(" ", end="")  # Print leading spaces

    for j in range(1, 2 * i):
        if j == 1 or j == 2 * i - 1 or i == n:
            print("*", end="")  # Print '*' at boundaries
        else:
            print(" ", end="")  # Print space inside the triangle

    print()  # Move to the next line




n = 4  # Number of rows

for i in range(n, 0, -1):  
    for j in range(n - i):  
        print(" ", end="")  # Print leading spaces  

    for j in range(1, 2 * i):  
        if j == 1 or j == 2 * i - 1 or i == n:  
            print("*", end="")  # Print '*' at boundaries  
        else:  
            print(" ", end="")  # Print space inside the triangle  

    print()  # Move to the next line  
