class HouseDesign:
  color = "white"
  room = 4

  def rent(self):
    print("house will be sor rent")

# Create an instance of the class
h1 = HouseDesign()

# Now you can call the rent method
print(h1.color, h1.room)  
h1.rent()

class HouseDesign:
  color="white"
  room= 4


h1= HouseDesign()
print(h1.color)
h1.color="orange"
print("new color", h1.color)

