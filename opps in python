class HouseDesign:
  def __init__(self):
    print("constructor ko bulaya")

h1=HouseDesign()
print("h1 =>", h1)

class HouseDesign:
    def __init__(self, x, y):
        self.color = x
        self.room = y
        print("constructor ko bulaya", self.color, self.room)


h1 = HouseDesign("yellow", 5)

class HouseDesign:
    def __init__(self, x, y):
        self.color = x
        self.room = y
    def info(self): # Make sure this method is included in the class definition
      print(f"house has color {self.color} and room is {self.room}")

h1 = HouseDesign("yellow", 5)
h1.info() # Now this line should work without error
